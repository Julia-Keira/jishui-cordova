extends layout

block styles
	link(href='styles/plugins/simplemde.min.css' rel='stylesheet' type='text/css')

block header
	.return
		a(href='index.html')
			i.fa.fa-arrow-left
	.title
		h1 Nowy przepis
	.extra-space

block content
	button#add dodaj składnik
	button#rem usuń ostatni składnik
	form#new-recipe
		label(for='name') Nazwa
		input#name
		span#alert-name
		label#ingredients składniki(podaj ilość jednostkę i składnik)
			input#ing(type='text' name='ingredients[]')
		span#alert-ingredients
		label(for='description') Opis
		textarea#description
		button#submit Dodaj przepis

block scripts
	script(src='scripts/plugins/simplemde.min.js')
	script(src='scripts/add.js')

