extends layout

block styles
	link(href='styles/plugins/simplemde.min.css' rel='stylesheet' type='text/css')

block header
	.return
		a.back(href='')
			i.fa.fa-arrow-left
	.title
		h1 Edytuj przepis
	.extra-space

block content
	
	form#edit-recipe
		label(for='name') Nazwa
		input#name
		span#alert-name
		button#add(type='button') dodaj składnik
		button#rem(type='button') usuń ostatni składnik
		label#ingredients składniki(podaj ilość jednostkę i składnik)
			input#ing(type='text' name='')
		span#alert-ingredients
		label(for='description') Opis
		textarea#description
		input(type='submit' value='Edytuj przepis') 

block scripts
	script(src='scripts/plugins/simplemde.min.js')
	script(src='scripts/edit.js')
